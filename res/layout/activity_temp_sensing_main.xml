<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".TempSensingMain" >

    <TextView
        android:id="@+id/tempC1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/TempReadingC"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tempF1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tempC1"
        android:layout_below="@+id/tempC1"
        android:text="@string/TempReadingF"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tempC3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tempC2"
        android:layout_below="@+id/tempC2"
        android:layout_marginTop="96dp"
        android:text="@string/TempReadingC"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tempF3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tempC2"
        android:layout_below="@+id/tempC3"
        android:text="@string/TempReadingF"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tempF2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tempC2"
        android:layout_below="@+id/tempF1"
        android:layout_marginTop="144dp"
        android:text="@string/TempReadingF"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tempC2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tempF2"
        android:layout_alignLeft="@+id/tempF1"
        android:layout_marginBottom="41dp"
        android:text="@string/TempReadingC"
        android:textSize="30sp" />

</RelativeLayout>