<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".TempSensingMain" >

    <TextView
        android:id="@+id/pulse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/PulseTxt"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tempC1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/pulse"
        android:layout_below="@+id/pulse"
        android:layout_marginTop="48dp"
        android:text="@string/TempReadingC1"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tempF1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/pulse"
        android:layout_below="@+id/tempC1"
        android:text="@string/TempReadingF1"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tempC2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tempF1"
        android:layout_below="@+id/tempF1"
        android:layout_marginTop="59dp"
        android:text="@string/TempReadingC2"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tempF2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tempC2"
        android:layout_below="@+id/tempC2"
        android:text="@string/TempReadingF2"
        android:textSize="30sp" />
    
    <TextView
        android:id="@+id/tempC3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tempC2"
        android:layout_below="@+id/tempF2"
        android:layout_marginTop="96dp"
        android:text="@string/TempReadingC3"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tempF3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tempC2"
        android:layout_below="@+id/tempC3"
        android:text="@string/TempReadingF3"
        android:textSize="30sp" />

</RelativeLayout>